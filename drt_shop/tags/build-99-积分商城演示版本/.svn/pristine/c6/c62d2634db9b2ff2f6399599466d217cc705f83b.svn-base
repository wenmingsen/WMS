<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csg.intshop.mapper.DrtMallItemMapper">
	<resultMap id="BaseResultMap" type="com.csg.intshop.entity.DrtMallItem">
		<id column="id" property="id"></id>
		<result column="sort_num" property="sortNum" />
		<result column="sku_code" property="skuCode" />
		<result column="item_state" property="itemState" />
		<result column="exchange_rate" property="exchangeRate" />
		<result column="creator_id" property="creatorId" />
		<result column="creator_name" property="creatorName" />
		<result column="create_time" property="createTime" />
		<result column="last_modifier_id" property="lastModifierId" />
		<result column="last_modifier_name" property="lastModifierName" />
		<result column="last_modifier_time" property="lastModifierTime" />
		<result column="is_delete" property="isDelete" />
	</resultMap>
	
	<sql id="BaseColumnList">
		id as id,
		sort_num as sortNum,
		sku_code as skuCode,
		item_state as itemState,
		exchange_rate as exchangeRate,
		creator_id as creatorId,
		creator_name as creatorName,
		create_time as createTime,
		last_modifier_id as lastModifierId,
		last_modifier_name as lastModifierName,
		last_modifier_time as lastModifierTime,
		is_delete as isDelete
	</sql>

	<sql id="BaseCustomQueryCondition">
		<if test="id != null">
			and id=#{id}
		</if>	
		<if test="sortNum != null">
			and sort_num=#{sortNum}
		</if>	
		<if test="skuCode != null">
			and sku_code=#{skuCode}
		</if>	
		<if test="itemState != null">
			and item_state=#{itemState}
		</if>	
		<if test="exchangeRate != null">
			and exchange_rate=#{exchangeRate}
		</if>	
		<if test="creatorId != null">
			and creator_id=#{creatorId}
		</if>	
		<if test="creatorName != null">
			and creator_name=#{creatorName}
		</if>	
		<if test="createTime != null">
			and create_time=#{createTime}
		</if>	
		<if test="lastModifierId != null">
			and last_modifier_id=#{lastModifierId}
		</if>	
		<if test="lastModifierName != null">
			and last_modifier_name=#{lastModifierName}
		</if>	
		<if test="lastModifierTime != null">
			and last_modifier_time=#{lastModifierTime}
		</if>	
		and is_delete=1
	</sql>

	<insert id="insert" parameterType="com.csg.intshop.entity.DrtMallItem" >
    	insert into drt_mall_item
    		(id, sort_num, sku_code, item_state, exchange_rate, creator_id, creator_name, create_time, last_modifier_id, last_modifier_name, last_modifier_time, is_delete) 
    	values
    		(#{id}, #{sortNum}, #{skuCode}, #{itemState}, #{exchangeRate}, #{creatorId}, #{creatorName}, #{createTime}, #{lastModifierId}, #{lastModifierName}, #{lastModifierTime}, #{isDelete})
  	</insert>

  	<insert id="insertList" parameterType="java.util.List" >
    	insert into drt_mall_item
    		(id, sort_num, sku_code, item_state, exchange_rate, creator_id, creator_name, create_time, last_modifier_id, last_modifier_name, last_modifier_time, is_delete) 
    	values
    	<foreach collection="list" index="index" item="item" separator=",">
    		(#{item.id}, #{item.sortNum}, #{item.skuCode}, #{item.itemState}, #{item.exchangeRate}, #{item.creatorId}, #{item.creatorName}, #{item.createTime}, #{item.lastModifierId}, #{item.lastModifierName}, #{item.lastModifierTime}, #{item.isDelete})
    	</foreach>
  	</insert>

  	<update id="delete" parameterType="java.lang.String">
		update drt_mall_item set is_delete=0 where id = #{id}
    </update>

  	<update id="update" parameterType="com.csg.intshop.entity.DrtMallItem">
		update drt_mall_item set
		sort_num=#{sortNum}, sku_code=#{skuCode}, item_state=#{itemState}, exchange_rate=#{exchangeRate}, creator_id=#{creatorId}, creator_name=#{creatorName}, create_time=#{createTime}, last_modifier_id=#{lastModifierId}, last_modifier_name=#{lastModifierName}, last_modifier_time=#{lastModifierTime}, is_delete=#{isDelete}
		where id = #{id} and is_delete=1
	</update>
	
	<update id="updateIfNotNull" parameterType="com.csg.intshop.entity.DrtMallItem">
		update drt_mall_item set
		<if test="sortNum != null">
			sort_num=#{sortNum}, 
		</if>
		<if test="skuCode != null">
			sku_code=#{skuCode}, 
		</if>
		<if test="itemState != null">
			item_state=#{itemState}, 
		</if>
		<if test="exchangeRate != null">
			exchange_rate=#{exchangeRate}, 
		</if>
		<if test="creatorId != null">
			creator_id=#{creatorId}, 
		</if>
		<if test="creatorName != null">
			creator_name=#{creatorName}, 
		</if>
		<if test="createTime != null">
			create_time=#{createTime}, 
		</if>
		<if test="lastModifierId != null">
			last_modifier_id=#{lastModifierId}, 
		</if>
		<if test="lastModifierName != null">
			last_modifier_name=#{lastModifierName}, 
		</if>
		<if test="lastModifierTime != null">
			last_modifier_time=#{lastModifierTime}, 
		</if>
		is_delete=1
		where id = #{id} and is_delete=1
	</update>

	<!-- 根据skuCode更新商品状态 -->
	<update id="updateBySkuCode" parameterType="com.csg.intshop.entity.DrtMallItem">
		update drt_mall_item set
		<if test="itemState != null">
			item_state=#{itemState}
		</if>
		where 
			sku_code=#{skuCode}
	</update>
	<select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.String" >
	    select 
	    <include refid="BaseColumnList" />
	    from drt_mall_item
	    where 
			id = #{id}
  	</select>

  	<select id="selectList" resultMap="BaseResultMap" parameterType="com.csg.intshop.entity.DrtMallItem">
	    select 
	    <include refid="BaseColumnList" />
	    from drt_mall_item
	    where 1=1
	    <include refid="BaseCustomQueryCondition" />
  	</select>

	<select id="selectListByinterface" resultMap="BaseResultMap" parameterType="java.util.Map">
	    select 
	    <include refid="BaseColumnList" />
	    from drt_mall_item
	    where 1 = 1
	    <if test="skuCodeList != null">
		    and sku_code in
		    <foreach collection="skuCodeList"  item="skuCode" separator="," open="(" close=")">
	            #{skuCode}
	        </foreach>
		</if>	
  	</select>
  	
	<update id="updateBatchByinterface"  parameterType="java.util.List">  
	    <foreach collection="list" item="item" index="index" open="" close="" separator=";">
	        update drt_mall_item
	        <set>
	            sku_code=#{item.itemState}
	        </set>
	        where id = #{item.id}
	    </foreach>      
	</update>

	
</mapper>
    <script type="text/javascript" src="../../js/jquery.min.js"></script>
    <script type="text/javascript" src="../../js/layer/layer.js"></script>
    <script type="text/javascript" src="../../common/common.js"></script>
    <script type="text/javascript">
         $(function(){
        	 var  orderId = JSON.parse(sessionStorage.getItem("orderList")).orderIds;
        	 getOrderWaybillDetail(orderId);
         });
         
       //调用物流后台信息
         function getOrderWaybillDetail(orderId){
    	   	 var params = {};
        	 params.orderId = orderId[0];
        	 var url = getRootPath()+"/ins/mall/order/queryOrderDetail";
    		 $.ajax({
    	         type: "post",
    	         url: url,
    	         data: params,
    	         success: function(result){
    				 if(result.state == 0){
    					 setPositionInfo(result.data);
 					 }
    	         }
    	     });
         }
         
         
	/*****设置地址信息 *******/
    function setPositionInfo(userInfo){
    	$("#name").html(userInfo.name);
    	$("#phone").html(userInfo.phone);
    	$("#address_other").html(userInfo.address);
    }
           
       
       /****订单详情  *********/
       function goToOrderDetail(){
    	   return location.href="orderDetail.html";
       }
       
       /**返回首页 **/
   		function goToMain(){
    	   return location.href="main.html";
       }
    </script>
